
apiVersion: v1
data:
  local_config.yaml: |
    server:
      http:
        hostname: localhost
        port: 8000
        static:
          production:
            /public: server/public
            /assets: dist/assets
            /dist: dist
      redis:
        port: 6379
        host: redis.d3os-system.svc
      redisTimeout: 5000
      sessionTimeout: 7200000
    client:
      version:
        d3os: {{ ks_version }}
        kubernetes: {{ kube_version }}
        openpitrix: {{ openpitrix_version }}
      enableKubeConfig: true
kind: ConfigMap
metadata:
  name: ks-console-config
  namespace: d3os-system
