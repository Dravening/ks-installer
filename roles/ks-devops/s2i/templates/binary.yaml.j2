apiVersion: devops.d3os.io/v1alpha1
kind: S2iBuilderTemplate
metadata:
  labels:
    controller-tools.k8s.io: "1.0"
    builder-type.d3os.io/b2i: "b2i"
    binary-type.d3os.io: "binary"
  annotations:
    descriptionEN: "This is a builder template for binary build"
    descriptionCN: "二进制文件的构建器模版"
    devops.d3os.io/s2i-template-url: https://github.com/d3os/s2i-binary-container
  name: binary
spec:
  containerInfo:
    - builderImage: {{ binary_repo }}:{{ s2itemplates_tag }}
  environment:
    - key: ARGS
      type: string
      description: "Arguments to use when calling binary,"
      required: false
      defaultValue: ""
  codeFramework: binary
  defaultBaseImage: {{ binary_repo }}:{{ s2itemplates_tag }}
  version: 0.0.1
  description: "This is a builder template for binary build"
  iconPath: assets/binary.png
