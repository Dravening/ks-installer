---
apiVersion: batch/v1
kind: Job
metadata:
  labels:
    app: openpitrix
    component: openpitrix-import-job
    version: v3.1.0
  name: openpitrix-import-job
  namespace: d3os-system
spec:
  backoffLimit: 100
  template:
    metadata:
      labels:
        app: openpitrix
        component: openpitrix-import-job
        version: v3.1.0
    spec:
      serviceAccountName: d3os
      restartPolicy: OnFailure
      initContainers:
        - name: wait-apiserver
          image: {{ openpitrix_job_repo }}:{{ openpitrix_job_tag }}
          imagePullPolicy: IfNotPresent
          command: ['sh', '-c', 'until nc -z ks-apiserver.d3os-system.svc 80; do echo "waiting for apiserver"; sleep 2; done;']
      containers:
        - name: import
          command:
            - import-app
            - import
          image: {{ openpitrix_job_repo }}:{{ openpitrix_job_tag }}
          imagePullPolicy: IfNotPresent
          volumeMounts:
            - mountPath: /etc/d3os
              name: d3os-config
      volumes:
        - name: d3os-config
          configMap:
            name: d3os-config